{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 20 },
  "configurePresets": [
    {
      "name": "x64-debug-vcpkg",
      "displayName": "x64 + vcpkg (Debug)",
      "generator": "Visual Studio 17 2022",
      "architecture": { "value": "x64" },
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "UA_ENABLE_ENCRYPTION": "OPENSSL",
        "UA_ENABLE_MBEDTLS": "OFF"
      }
    }
  ],
  "buildPresets": [
    { "name": "x64-debug-vcpkg", "configurePreset": "x64-debug-vcpkg", "configuration": "Debug" }
  ]
}